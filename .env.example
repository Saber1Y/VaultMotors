# Required Environment Variables for Vercel Deployment

# Privy Configuration (Required for Wallet Authentication)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id

# Alchemy API Key (for RPC providers)
NEXT_PUBLIC_ALCHEMY_ID=your_alchemy_api_key

# RPC URLs
NEXT_PUBLIC_RPC_URL=https://rpc.testnet.soniclabs.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_key

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://your-vercel-app.vercel.app

# Deployment Private Key (Optional - only for contract deployment)
PRIVATE_KEY=your_private_key

# Contract Addresses - Sonic Testnet
NEXT_PUBLIC_SONIC_TESTNET_HEMDEALER_ADDRESS=0xde609E52D9164C227D4F174D6260289bc3E62eC2
